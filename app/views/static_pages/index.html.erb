<div class="widewrapper main">
  <div class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
        <div class="row">
          <% @articles.each_slice(2) do |column2_article| %>
            <div class="col-md-6 col-sm-6">
              <% column2_article.each do |article| %>
                <article class=" blog-teaser">
                  <header>
                    <%= image_tag article.thumbnail.url, class: 'img-responsive' %>
                    <h3>
                      <%= link_to(article_path(article)) do %>
                        <%= article.title %>
                      <% end %>
                    </h3>
                    <hr/>
                  </header>
                  <div class="body">
                    <%= article.elements.first.element_data %>
                  </div>
                  <div class="clearfix">
                    <%= link_to 'Read more', article_path(article), class: 'btn btn-tales-one' %>
                  </div>
                </article>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="paging">
          <a href="#" class="newer"><i class="fa fa-long-arrow-left"></i> Newer</a>
          <span>&bull;</span>
          <a href="#" class="older">Older <i class="fa fa-long-arrow-right"></i></a>
        </div>
      </div>
      <aside class="col-md-4 blog-aside">
        <div class="aside-widget">
          <header>
            <h3>タグ</h3>
          </header>
          <div class="body clearfix">
            <ul class="tags">
              <% @tags.each do |tag| %>
                <li>
                  <%= link_to(tag_path(tag)) do %>
                    <%= tag.name %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </aside>
    </div>
  </div>
</div>
