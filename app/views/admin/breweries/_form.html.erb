<%= form_for(@brewery, url: admin_breweries_path, html: { class: 'form-horizontal'}) do |f| %>
  <div class="col-xs-10">
    <div class="form-group">
      <%= f.label :name, '名前' , class: 'control-label col-xs-2' %>
      <div class="col-xs-10">
        <%= f.text_field :name, class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :url, 'URL' , class: 'control-label col-xs-2' %>
      <div class="col-xs-10">
        <%= f.text_field :web_site, class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :social_accounts, 'ソーシャルアカウント' , class: 'control-label col-xs-2' %>
      <div class="col-xs-10">
        <social-account-list attributes="socialAccountsAttributes" accounts="selectedSocialAccounts" data="<%= @social_accounts.to_json %>"> </social-account-list>
      </div>
    </div>

  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <ul class="list-inline">
        <%= f.hidden_field :social_accounts, value: "{{ selectedSocialAccounts }}" %>
        <li><%= link_to '戻る', admin_breweries_path, class: 'btn btn-default' %></li>
        <li><%= f.submit '作成する', class: 'btn btn-primary'%><li>
      </ul>
    </div>
  </div>
<% end %>
