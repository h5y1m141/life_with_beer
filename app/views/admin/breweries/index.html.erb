<div class='container-fluid'>
  <%= render partial: '/admin/pagenation', locals: {resouces: @breweries }%>

  <% @breweries.each_slice(4) do |column4_breweries| %>
    <div class='row'>
      <% column4_breweries.each do |brewery| %>
        <div class='col-md-3 col-sm-6'>
          <div class="brewery__media__thumbnail">
          <%= link_to(edit_admin_brewery_path(brewery)) do %>
            <% if brewery.image.url.nil? %>
              <%= image_tag('logo/logo-medium.png', class: 'thumbnail') %>
            <% else %>
              <%= image_tag(brewery.image.medium_thumb.url, class: 'thumbnail') %>
            <% end %>
          <% end %>
          </div>
          <h4><%= brewery.name %></h4>
          <ul class='list-inline'>
            <li>
              <%= link_to(edit_admin_brewery_path(brewery)) do %>
                <button class="btn btn-info btn-sm">編集</button>
              <% end %>
            </li>
            <li>
              <%= link_to(admin_brewery_path(brewery), method: :delete, data:{ confirm: '削除してもいいですか？' }) do %>
                <button class="btn btn-danger btn-sm">削除</button>
              <% end %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= render partial: '/admin/pagenation', locals: {resouces: @breweries }%>
</div>
