<div class='container-fluid'>
  <%= render partial: '/admin/pagenation', locals: {resouces: @items }%>
  <div class="row">
    <%= render partial: '/admin/search_form' %>
  </div>
  <% @items.each_slice(4) do |column4_items| %>
    <div class='row'>
      <% column4_items.each do |item| %>
        <div class='col-md-3 col-sm-6'>
          <div class="item__media__thumbnail thumbnail">
            <%= link_to(edit_admin_item_path(item)) do %>
              <% if item.image.present? %>
                <%= image_tag item.image.medium_thumb.url %>
              <% end %>
            <% end %>
            <p class="item__media__caption">
              出典：<%= item.original_image_url %>
            </p>
          </div>
          <h4><%= item.name %></h4>
          <ul class='list-inline'>
            <li>
              <%= link_to(edit_admin_item_path(item)) do %>
                <button class="btn btn-info btn-sm">編集</button>
              <% end %>
            </li>
            <li>
              <%= link_to(admin_item_path(item), method: :delete, data:{ confirm: '削除してもいいですか？' }) do %>
                <button class="btn btn-danger btn-sm">削除</button>
              <% end %>
            </li>
          </ul>          
        </div>
      <% end %>
    </div>
  <% end %>
  <%= render partial: '/admin/pagenation', locals: {resouces: @items }%>
</div>
