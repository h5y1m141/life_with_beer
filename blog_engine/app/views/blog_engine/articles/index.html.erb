<div id="articles-view" class="container">
  <p id="notice"><%= notice %></p>
  <h1>Listing Articles</h1>
  <table class="table table-responsive">
    <thead class="thead-inverse">
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr v-for="article in articles">
        <td>{{ article.id }}</td>
        <td>{{ article.title }}</td>
        <td>{{ article.body }}</td>
        <td><button @click="show(article.id)">Show</button></td>
      </tr>
    </tbody>
  </table>

  <button @click="newArticle=!newArticle" class="btn btn-info">NewArticle</button>
  <div v-cloak>
    <div v-show="newArticle">
      <div>
        <label for="title">Title</label>
        <input type="text" v-model="title" />
      </div>
      <div>
        <label for="body">Body</label>
        <textarea v-model="body"></textarea>
      </div>
      <div>
        <button @click="create" :class="{ disabled: loading }" class="btn btn-primary">Submit</button>
      </div>
    </div>
    <p v-show="loading">{{ message }}</p>

    <div v-show="showArticle">
      <div>
        <label for="title">Title</label>
        <div></div>
      </div>
      <div>
        <label for="body">Body</label>
        <div></div>
      </div>
      <div>
        <button class="btn btn-primary">Edit</button>
      </div>
    </div>

  </div>

</div>
